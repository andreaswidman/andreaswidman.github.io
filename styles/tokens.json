{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$metadata": {
    "brand": "Acne Studios",
    "version": "1.0.0",
    "extracted": "2026-02-23",
    "source": "acnestudios.com",
    "notes": "W3C Design Tokens format — compatible with Figma Tokens Studio (Style Dictionary)"
  },

  "color": {
    "$type": "color",
    "black":         { "$value": "#000000", "$description": "Primary text, borders, non-blue CTAs" },
    "white":         { "$value": "#FFFFFF", "$description": "Page bg, button text on blue" },
    "blue":          { "$value": "#0018A8", "$description": "Primary CTA — Add to Bag, accordion labels, selected states" },
    "blue-light":    { "$value": "#E8F0FE", "$description": "Selected size tile background" },
    "blue-link":     { "$value": "#3860BE", "$description": "Inline hyperlinks (Fit Predictor, anchors)" },
    "red":           { "$value": "#DC0000", "$description": "Sale price, error states" },
    "green":         { "$value": "#007701", "$description": "In stock, success states" },
    "alabaster":     { "$value": "#F7F7F7", "$description": "Section / slide backgrounds" },
    "grey-100":      { "$value": "#F4F4F4", "$description": "Subtle UI backgrounds" },
    "grey-200":      { "$value": "#F2F2F2", "$description": "Input backgrounds, subtle fills" },
    "grey-300":      { "$value": "#E0E0E0", "$description": "Light dividers" },
    "grey-400":      { "$value": "#C2C2C2", "$description": "Default border colour" },
    "grey-500":      { "$value": "#A0A0A0", "$description": "Disabled text" },
    "grey-600":      { "$value": "#6B6B6B", "$description": "Secondary / muted text (colour count, descriptions)" },
    "grey-700":      { "$value": "#555555", "$description": "Mid-tone labels" },
    "apricot-white": { "$value": "#FFFFEB", "$description": "Low-stock / scarcity banner background" },
    "overlay-35":    { "$value": "rgba(0,0,0,0.35)", "$description": "Image overlay (light)" },
    "overlay-50":    { "$value": "rgba(0,0,0,0.50)", "$description": "Image overlay (medium)" }
  },

  "font": {
    "family": {
      "$type": "fontFamily",
      "primary": { "$value": ["Helvetica Now Text", "Helvetica", "Arial", "sans-serif"], "$description": "Main UI font — body, nav, labels, buttons, headings" },
      "mono":    { "$value": ["Helvetica Monospaced Pro", "Courier New", "monospace"],   "$description": "Prices, quantities, data values" },
      "micro":   { "$value": ["Helvetica Now Micro", "Helvetica", "Arial", "sans-serif"],"$description": "Micro labels, badges at 8px" }
    },
    "size": {
      "$type": "dimension",
      "xs":   { "$value": "8px",  "$description": "Micro badges" },
      "sm":   { "$value": "10px", "$description": "Small labels, item counts" },
      "base": { "$value": "12px", "$description": "Universal default — nav, body, buttons, product names" },
      "md":   { "$value": "14px", "$description": "Intermediate" },
      "lg":   { "$value": "16px", "$description": "Form input placeholder" },
      "xl":   { "$value": "18px", "$description": "Section headings (e.g. Women's New Arrivals)" }
    },
    "weight": {
      "$type": "fontWeight",
      "thin":     { "$value": 100 },
      "regular":  { "$value": 400, "$description": "Default weight — all body and UI text" },
      "medium":   { "$value": 500, "$description": "Micro labels" },
      "semibold": { "$value": 600 },
      "bold":     { "$value": 700 }
    },
    "lineHeight": {
      "$type": "dimension",
      "tight":   { "$value": "16px" },
      "base":    { "$value": "20px", "$description": "Default line height" },
      "relaxed": { "$value": "24px" }
    },
    "letterSpacing": {
      "$type": "dimension",
      "tight": { "$value": "0.12px", "$description": "Micro labels" },
      "wide":  { "$value": "0.16px", "$description": "Small labels" },
      "base":  { "$value": "0.3px",  "$description": "Universal default" }
    }
  },

  "spacing": {
    "$type": "dimension",
    "1":  { "$value": "4px" },
    "2":  { "$value": "8px" },
    "3":  { "$value": "12px" },
    "4":  { "$value": "16px" },
    "5":  { "$value": "20px", "$description": "Matches line-height-base" },
    "6":  { "$value": "24px" },
    "8":  { "$value": "32px" },
    "10": { "$value": "40px" },
    "12": { "$value": "48px" },
    "16": { "$value": "64px", "$description": "Nav height" }
  },

  "border": {
    "radius": {
      "$type": "dimension",
      "none": { "$value": "0px", "$description": "No rounded corners — flat aesthetic throughout" }
    },
    "width": {
      "$type": "dimension",
      "default": { "$value": "1px" }
    },
    "color": {
      "$type": "color",
      "default": { "$value": "#C2C2C2" },
      "dark":    { "$value": "#000000" },
      "blue":    { "$value": "#0018A8" }
    },
    "style": {
      "default": { "$value": "1px solid #C2C2C2" },
      "dark":    { "$value": "1px solid #000000" },
      "blue":    { "$value": "1px solid #0018A8" }
    }
  },

  "shadow": {
    "$type": "shadow",
    "none": { "$value": "none", "$description": "Acne Studios uses no elevation shadows — flat design language" }
  },

  "layout": {
    "navHeight":     { "$type": "dimension", "$value": "60px" },
    "gridColumns":   { "$type": "number",    "$value": 4,       "$description": "PLP product grid — desktop" },
    "gridGap":       { "$type": "dimension", "$value": "0px",   "$description": "Images bleed edge-to-edge" },
    "imageRatio":    { "$type": "string",    "$value": "3/4",   "$description": "Portrait product images" },
    "maxWidth":      { "$type": "dimension", "$value": "1440px" }
  },

  "component": {
    "button": {
      "primary": {
        "background":    { "$type": "color",     "$value": "#0018A8" },
        "color":         { "$type": "color",     "$value": "#FFFFFF" },
        "border":        { "$type": "string",    "$value": "1px solid #0018A8" },
        "borderRadius":  { "$type": "dimension", "$value": "0px" },
        "paddingY":      { "$type": "dimension", "$value": "14px" },
        "paddingX":      { "$type": "dimension", "$value": "24px" },
        "fontFamily":    { "$type": "fontFamily","$value": ["Helvetica Now Text", "Helvetica", "Arial", "sans-serif"] },
        "fontSize":      { "$type": "dimension", "$value": "12px" },
        "fontWeight":    { "$type": "fontWeight","$value": 400 },
        "letterSpacing": { "$type": "dimension", "$value": "0.3px" },
        "textTransform": { "$type": "string",    "$value": "uppercase" }
      },
      "secondary": {
        "background":   { "$type": "color",     "$value": "#FFFFFF" },
        "color":        { "$type": "color",     "$value": "#000000" },
        "border":       { "$type": "string",    "$value": "1px solid #000000" },
        "borderRadius": { "$type": "dimension", "$value": "0px" }
      },
      "ghost": {
        "background":   { "$type": "color",     "$value": "transparent" },
        "color":        { "$type": "color",     "$value": "#000000" },
        "border":       { "$type": "string",    "$value": "none" },
        "borderBottom": { "$type": "string",    "$value": "1px solid #000000" }
      },
      "ghostBlue": {
        "background":   { "$type": "color",     "$value": "transparent" },
        "color":        { "$type": "color",     "$value": "#0018A8" },
        "borderBottom": { "$type": "string",    "$value": "1px solid #0018A8" }
      }
    },
    "sizeSelector": {
      "default": {
        "background":   { "$type": "color",     "$value": "#FFFFFF" },
        "color":        { "$type": "color",     "$value": "#000000" },
        "border":       { "$type": "string",    "$value": "1px solid #C2C2C2" }
      },
      "selected": {
        "background":   { "$type": "color",     "$value": "#E8F0FE" },
        "color":        { "$type": "color",     "$value": "#0018A8" },
        "border":       { "$type": "string",    "$value": "1px solid #0018A8" }
      },
      "outOfStock": {
        "color":           { "$type": "color",  "$value": "#C2C2C2" },
        "textDecoration":  { "$type": "string", "$value": "line-through" }
      }
    },
    "badge": {
      "lowStock": {
        "background": { "$type": "color", "$value": "#FFFFEB" },
        "color":      { "$type": "color", "$value": "#000000" }
      },
      "sale": {
        "background": { "$type": "color", "$value": "transparent" },
        "color":      { "$type": "color", "$value": "#DC0000" }
      },
      "new": {
        "background": { "$type": "color", "$value": "#000000" },
        "color":      { "$type": "color", "$value": "#FFFFFF" }
      },
      "inStock": {
        "background": { "$type": "color", "$value": "transparent" },
        "color":      { "$type": "color", "$value": "#007701" }
      }
    },
    "accordion": {
      "labelColor":    { "$type": "color",     "$value": "#0018A8" },
      "borderTop":     { "$type": "string",    "$value": "1px solid #E0E0E0" },
      "paddingY":      { "$type": "dimension", "$value": "16px" },
      "fontSize":      { "$type": "dimension", "$value": "12px" },
      "textTransform": { "$type": "string",    "$value": "uppercase" }
    },
    "productTile": {
      "imageRatio":       { "$type": "string",    "$value": "3/4" },
      "nameTransform":    { "$type": "string",    "$value": "uppercase" },
      "nameFontSize":     { "$type": "dimension", "$value": "12px" },
      "priceFontFamily":  { "$type": "fontFamily","$value": ["Helvetica Monospaced Pro", "Courier New", "monospace"] },
      "subtextColor":     { "$type": "color",     "$value": "#6B6B6B" }
    }
  }
}
